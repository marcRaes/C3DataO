{% extends 'base.html.twig' %}

{% block title %}Hello VehiclesController!{% endblock %}

{% block body %}
    {% for vehicle in listOfVehicles %}
        <details>
            <summary role="button">{{ vehicle.name }}</summary>
            <table>
                <thead data-theme="light">
                <tr>
                    <th scope="col">Modèle</th>
                    <th scope="col">Fabricant</th>
                    <th scope="col">Coût</th>
                    <th scope="col">Longueur</th>
                    <th scope="col">Vitesse max</th>
                    <th scope="col">Equipage</th>
                    <th scope="col">Passagers</th>
                    <th scope="col">Capacité</th>
                    <th scope="col">Classe</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">{{ vehicle.model }}</th>
                    <td>{{ vehicle.manufacturer }}</td>
                    <td>{{ vehicle.cost_in_credits }}</td>
                    <td>{{ vehicle.length }}</td>
                    <td>{{ vehicle.max_atmosphering_speed }}</td>
                    <td>{{ vehicle.crew }}</td>
                    <td>{{ vehicle.passengers }}</td>
                    <td>{{ vehicle.cargo_capacity }}</td>
                    <td>{{ vehicle.vehicle_class }}</td>
                </tr>
                </tbody>
            </table>
        </details>
    {% endfor %}

    <nav>
        {% if page > 1 %}
            <a href="{{ path('app_vehicles', {'page': page - 1}) }}">Précédent</a>
        {% endif %}

        {% for i in 1..nbPages %}
            {% if i == page %}
                <span>{{ i }}</span>
            {% else %}
                <a href="{{ path('app_vehicles', {'page': i}) }}">{{ i }}</a>
            {% endif %}
        {% endfor %}

        {% if page < nbPages %}
            <a href="{{ path('app_vehicles', {'page': page + 1}) }}">Suivant</a>
        {% endif %}
    </nav>
{% endblock %}
